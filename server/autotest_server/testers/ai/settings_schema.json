{
  "type": "object",
  "required":
    ["tester_type", "test_data"],
  "properties": {
    "tester_type": {
      "type": "string",
      "enum": ["ai"]
    },
    "env_data": {
      "title": "AI Feedback Settings",
      "type": "object",
      "required": [
        "ai_feedback_version"
      ],
      "properties":{
         "ai_feedback_version": {
           "title": "AI Feedback library version",
           "type": "string"
         }
      }
    },
    "test_data": {
      "title": "Test Groups",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["config", "timeout", "output"],
        "properties": {
          "category": {
            "title": "Category",
            "type": "array",
            "items": {
              "$ref": "#/definitions/test_data_categories"
            },
            "uniqueItems": true
          },
          "timeout": {
            "title": "Timeout",
            "type": "integer",
            "default": 30
          },
          "output": {
            "title": "Output Display",
            "type": "string",
            "enum": ["overall_comment", "annotations", "message"]
          },
          "test_label": {
            "type": "string",
            "default": "Generate AI Feedback"
          },
          "config": {
            "type": "object",
            "required": ["scope", "submission", "model", "test_label"],
            "properties": {
              "scope": {
                "type": "string",
                "enum": ["code", "text", "image"]
              },
              "submission": { "type": "string" },
              "model": { "type": "string" },
              "json_schema": { "type": "string" },
              "llama_mode": {
                "type": "string",
                "enum": ["cli", "server"]
              },
              "output": { "type": "string" },
              "output_template": { "type": "string" },
              "prompt": { "type": "string" },
              "prompt_text": { "type": "string" },
              "question": { "type": "string" },
              "solution": { "type": "string" },
              "solution_image": { "type": "string" },
              "submission_image": { "type": "string" },
              "submission_type": { "type": "string" },
              "system_prompt": { "type": "string" },
              "test_output": { "type": "string" }
            }
          },
          "extra_info": {
            "$ref": "#/definitions/extra_group_data"
          }
        }
      }
    }
  }
}
