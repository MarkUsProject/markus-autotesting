{
  "type": "object",
  "required":
    ["tester_type", "test_data"],
  "properties": {
    "tester_type": {
      "type": "string",
      "enum": ["ai"]
    },
    "test_data": {
      "title": "Test Groups",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["config", "timeout", "output", "title", "category"],
        "properties": {
          "category": {
            "title": "Category",
            "type": "array",
            "items": {
              "$ref": "#/definitions/test_data_categories"
            },
            "uniqueItems": true
          },
          "config": {
            "type": "object",
            "required": ["scope", "submission", "model"],
            "properties": {
              "submission_type": { "type": "string" },
              "prompt": { "type": "string" },
              "prompt_text": { "type": "string" },
              "scope": {
                "type": "string",
                "enum": ["code", "text", "image"]
              },
              "submission": { "type": "string" },
              "question": { "type": "string" },
              "model": { "type": "string" },
              "output": { "type": "string" },
              "solution": { "type": "string" },
              "test_output": { "type": "string" },
              "submission_image": { "type": "string" },
              "solution_image": { "type": "string" },
              "system_prompt": { "type": "string" },
              "llama_mode": {
                "type": "string",
                "enum": ["cli", "server"]
              },
              "output_template": { "type": "string" },
              "json_schema": { "type": "string" }
            }
          },
          "timeout": {
            "title": "Timeout",
            "type": "integer",
            "default": 30
          },
          "output": {
            "title": "Output Type",
            "type": "string",
            "enum": ["comments", "annotations", "test_output"]
          },
          "title": {
            "type": "string"
          }
        }
      }
    }
  }
}
