FROM ubuntu:18.04

RUN apt-get update && \
    apt-get -y install python3 python3-pip python3-venv && \
    rm -rf /var/lib/apt/lists/*

CHECKPOINT

RUN python3 -m venv /tmp/venv

CHECKPOINT

WORKDIR /app
COPY . .
RUN /tmp/venv/bin/pip install -U pytest hypothesis attrs .

RUN /tmp/venv/bin/pytest --ignore src/autotester/testers/py/tests
