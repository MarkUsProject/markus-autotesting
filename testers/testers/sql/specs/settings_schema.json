{
  "type": "object",
  "required": [
    "env_data"
  ],
  "properties": {
    "tester_type": {
      "enum": [
        "sql"
      ]
    },
    "env_data": {
      "title": "Test environment",
      "type": "object",
      "required": [
        "schema_name",
        "schema_file_path"
      ],
      "properties": {
        "schema_name": {
          "title": "Schema name",
          "type": "string",
          "default": "autotest"
        },
        "schema_file_path": {
          "title": "Schema file",
          "$ref": "#/definitions/files_list"
        }
      }
    },
    "test_data": {
      "title": "Test Groups",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "query_files",
          "category",
          "timeout"
        ],
        "properties": {
          "query_files": {
            "title": "Query files",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "query_file",
                "data_files"
              ],
              "properties": {
                "query_file": {
                  "title": "Query file",
                  "$ref": "#/definitions/files_list"
                }
              },
              "dependencies": {
                "query_file": {
                  "properties": {
                    "order_by": {
                      "type": "string"
                    },
                    "data_files": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/files_list"
                      },
                      "uniqueItems": true
                    }
                  }
                }
              }
            },
            "uniqueItems": true
          },
          "category": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/test_data_categories"
            },
            "uniqueItems": true
          },
          "timeout": {
            "title": "Timeout",
            "type": "integer",
            "default": 30
          },
          "feedback_file_name": {
            "title": "Feedback file",
            "type": "string"
          },
          "extra_info": {
            "$ref": "#/definitions/extra_group_data"
          }
        },
        "dependencies": {
          "feedback_file_name": {
            "properties": {
              "upload_feedback_to_repo": {
                "title": "Add feedback file to repo",
                "type": "boolean",
                "default": false
              },
              "upload_feedback_file": {
                "title": "Upload feedback file for grading",
                "type": "boolean",
                "default": false
              }
            }
          }
        }
      }
    }
  }
}