          "timeout",
          "environment",
          "schema_name"
        ],
        "properties": {
          "class_files": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "class_file": {
                  "$ref": "#/definitions/files_list"
                }
              },
              "dependencies": {
                "class_file": {
                  "properties": {
                    "class_methods": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "class_method": {
                            "type": "string"
                          }
                        },
                        "dependencies": {
                          "class_method": {
                            "properties": {
                              "order_on": {
                                "type": "boolean"
                              },
                              "data_files": {
                                "type": "array",
