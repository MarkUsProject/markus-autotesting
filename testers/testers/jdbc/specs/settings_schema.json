            "uniqueItems": true
          },
          "category": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/test_data_categories"
            },
            "uniqueItems": true
          },
          "timeout": {
            "type": "integer",
            "default": 30
          },
          "feedback_file_name": {
            "type": "string"
          }
        },
        "dependencies": {
          "feedback_file_name": {
            "properties": {
              "upload_feedback_to_repo": {
                "type": "boolean",
