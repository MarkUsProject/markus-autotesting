{
  "type": "object",
  "required": [
    "env_data"
  ],
  "properties": {
    "tester_type": {
      "enum": [
        "jdbc"
      ]
    },
    "env_data": {
      "title": "Test environment",
      "type": "object",
      "required": [
        "schema_name",
        "schema_file_path"
      ],
      "properties": {
        "schema_name": {
          "title": "Schema name",
          "type": "string",
          "default": "autotest"
        },
        "schema_file_path": {
          "title": "Schema path",
          "$ref": "#/definitions/files_list"
        }
      }
    },
    "test_data": {
      "title": "Test Groups",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "timeout",
          "category",
          "class_files"
        ],
        "properties": {
          "class_files": {
            "title": "Class files",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "class_file"
              ],
              "properties": {
                "class_file": {
                  "title": "Java class file",
                  "$ref": "#/definitions/files_list"
                }
              },
              "dependencies": {
                "class_file": {
                  "properties": {
                    "class_methods": {
                      "title": "Class methods",
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "class_method": {
                            "title": "Class method",
                            "type": "string"
                          }
                        },
                        "dependencies": {
                          "class_method": {
                            "properties": {
                              "order_on": {
                                "title": "Sort method output",
                                "type": "boolean",
                                "default": false
                              },
                              "data_files": {
                                "title": "Data files",
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "data_file": {
                                      "title": "Data file",
                                      "$ref": "#/definitions/files_list"
                                    }
                                  },
                                  "dependencies": {
                                    "data_file": {
                                      "properties": {
                                        "tables": {
                                          "title": "Tables",
                                          "type": "array",
                                          "items": {
                                            "type": "string"
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    },
                    "test_connection": {
                      "title": "Test connection",
                      "type": "boolean",
                      "default": false
                    },
                    "test_disconnection": {
                      "title": "Test disconnection",
                      "type": "boolean",
                      "default": false
                    }
                  }
                }
              }
            },
            "uniqueItems": true
          },
          "category": {
            "title": "Category",
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/test_data_categories"
            },
            "uniqueItems": true
          },
          "timeout": {
            "title": "Timeout",
            "type": "integer",
            "default": 30
          },
          "feedback_file_name": {
            "title": "Feedback file",
            "type": "string"
          },
          "extra_info": {
            "$ref": "#/definitions/extra_group_data"
          }
        },
        "dependencies": {
          "feedback_file_name": {
            "properties": {
              "upload_feedback_to_repo": {
                "title": "Add feedback file to repo",
                "type": "boolean",
                "default": false
              },
              "upload_feedback_file": {
                "title": "Upload feedback file for grading",
                "type": "boolean",
                "default": false
              }
            }
          }
        }
      }
    }
  }
}