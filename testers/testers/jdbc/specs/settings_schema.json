                                    "data_file": {
                                      "$ref": "#/definitions/files_list"
                                    }
                                  },
                                  "dependencies": {
                                    "data_file": {
                                      "properties": {
                                        "tables": {
                                          "type": "array",
                                          "items": {
                                            "type": "string"
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    },
                    "test_connection": {
                      "type": "boolean"
                    },
                    "test_disconnection": {
                      "type": "boolean"
                    }
                  }
